  function t3tool_show_handlecmd($args) {
    $table = $args[0];
    $uid = $args[1];

    if (!$uid){
      return ("t3tool show [table] [uid]\n");
    }
    $record = getSingleRecordByString($table, $uid);
    return sendRecordAsTable($record);

  }

  /**
   * @return array
   */
  function t3tool_show_completion () {
    return array(
      'show' => 't3tool_core_completion_tables',
    );
  }